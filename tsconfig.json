    "target": "ES2017",
    "module": "commonjs",
    "sourceMap": false,
    "inlineSourceMap": true,
    "sourceRoot": "src",
    "outDir": "dist",
    "removeComments": true,
    "strict": true,
    "declaration": true,
    "noEmitOnError": true
